{
    "name": "spatie/mjml-php",
    "description": "Convert MJML to HTML using PHP",
    "keywords": [
        "spatie",
        "mjml-php"
    ],
    "homepage": "https://github.com/spatie/mjml-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/process": "^6.3.2"
    },
    "suggest": {
        "hammerstone/sidecar": "When you want to run Mjml in Sidecar instead."
    },
    "require-dev": {
        "hammerstone/sidecar": "^0.4.1",
        "laravel/pint": "^1.11",
        "orchestra/testbench": "^8.9",
        "pestphp/pest": "^2.16",
        "spatie/ray": "^1.37.2"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Mjml\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Mjml\\Tests\\": "tests",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@prepare",
            "@php vendor/bin/pint"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}